<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">





        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilteText"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="serif"
            android:textStyle="normal|bold"
            android:background="#242422"
            android:textAlignment="center"
            android:text="Game of thrones" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/movieImage"
            android:scaleType="fitXY"
            android:layout_below="@+id/tilteText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            />

    <Button
        android:text="Mark As A Favourties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/voteText"
        android:layout_alignLeft="@+id/overviewText"
        android:layout_alignStart="@+id/overviewText"
        android:layout_marginTop="5dp"
        android:id="@+id/makeAssFav" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overviewText"
            android:text="sssssssssssssssssssssssssssahkdkjashdjkhdsakhskaddskajhdkjadhkjashdkjashdkhasjdnasiudasyuadshjdgsadsgadshgadsghjasdghjdgshjasdghasdgjgadsjhgdsgsgdsjgajdguywguysssssssssssss"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/makeAssFav"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="normal|italic"
            android:textColor="#b3ffff"
             />




    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="21dp"
            android:text="2016/10/11"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="casual"
            android:textStyle="normal|italic"
            android:id="@+id/yearText"
            android:layout_marginStart="21dp"
            android:layout_alignTop="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_toEndOf="@+id/movieImage" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voteText"
            android:layout_below="@+id/yearText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/movieImage"
            android:text="10/10"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="normal|italic"
            android:fontFamily="casual"
            android:textColor="#ffff66" />



</RelativeLayout>